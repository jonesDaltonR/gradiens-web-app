    <style type="text/css">
        ul.headBar{
            list-style-type:none;
            max-width:1200px;
            margin:0 auto;
        }
        ul.headBar li{
             display:inline;
             padding:8px;
             padding-left:16px;
             padding-right:16px;
             font-size:30px;
             width:120px;
             height:40px;
             border: 2px solid blue;
             border-radius:5px;
             margin:15px;
        }

        h1{
            padding-top:50px;
            margin-bottom:-25px
        }
        h4{
            padding-top:15px;
            text-indent:5px
        }

        ul.footer{
            list-style-type:none;
            display:inline;
        }
        .column{
            float: left;
            margin: 0 60px;
            font-size:15px;
            color:#535353;
            display:inline-block;
            opacity:0.8;
        }
        .column li{
            padding-bottom:10px;
        }
        footer{
        }
        
    </style>
</head>
<body>
    <img src="~/Images/Logo.png" alt="Gradiens Logo" style="height:150px;width:100px;float:left;margin-right:10px;margin-left:200px"/>
    <h1>Gradiens</h1>
    <h4>A Travel Agency</h4>
    <br />
    <div>
        <ul class="headBar">
            <li>@Html.ActionLink("Home", "Index", "Home")</li>
            <li>@Html.ActionLink("Plan A Trip", "MakingATrip", "MakingATrip")</li>
            <li>@Html.ActionLink("Support/Contact Us", "Support", "Support")</li>

            @if (Request.IsAuthenticated) // If user is logged in
            {
                <li>@Html.ActionLink("Logout", "Logout", "Account")</li>
            }
            @if (!Request.IsAuthenticated) // If user is not logged in
            {
                <li>@Html.ActionLink("Login", "Login", "Account")</li>
            }
        </ul>
    </div>
    <br />
