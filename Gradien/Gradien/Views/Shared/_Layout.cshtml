    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <div class="column">
                <ul class="footer">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>Recommended</li>
                    <li>@Html.ActionLink("Plan A Trip", "MakingATrip", "MakingATrip")</li>
                    <li>@Html.ActionLink("Support/Contact Us", "Support", "Support")</li>
                </ul>
            </div>
            <div class="column">
                <ul class="footer">
                    <li>@Html.ActionLink("About Us","About","Home")</li>
                    <li>@Html.ActionLink("Contact Us", "Contact", "Home")</li>
                    <li>@Html.ActionLink("FAQs", "FAQ", "Home")</li>
                </ul>
            </div>
            <div class="column">
                <ul class="footer">
                    <li>@Html.ActionLink("Privacy Policy", "Privacy", "Home")</li>
                    <li>@Html.ActionLink("Terms of Service", "Terms", "Home")</li>
                </ul>
            </div>
            <p style="clear:both;text-align:center;">&copy; @DateTime.Now.Year - Gradiens</p>
        </footer>
    </div>
