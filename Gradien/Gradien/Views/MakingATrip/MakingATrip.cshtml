
@{
    ViewBag.Title = "MakingATrip";
}
<head>
    <style>
        #map {
            height: 400px;
            width: 100%;
        }
    </style>
</head>

<h2>MakingATrip</h2>

<body>
    <h3>Making A Trip Map</h3>
    <div id="map"></div>
    <script>
      function initMap() {
          var GrandRapids = { lat: 42.8847, lng: -85.5248 };
        var map = new google.maps.Map(document.getElementById('map'), {
          zoom: 10,
          center: GrandRapids
        });
        var marker = new google.maps.Marker({
          position: GrandRapids,
          map: map
        });
      }
    </script>
    <script async defer
           src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAx1UItaXdujKDjEEP4moYvqm3XfpH3x0c&callback=initMap">
    </script>
</body>
 
